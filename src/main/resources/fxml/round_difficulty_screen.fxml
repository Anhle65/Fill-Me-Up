   <children>
      <GridPane layoutX="14.0" layoutY="-3.0" prefHeight="400.0" prefWidth="580.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
