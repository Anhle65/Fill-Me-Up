              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <RadioButton fx:id="easyRadioButton" mnemonicParsing="false" text="Easy" GridPane.halignment="CENTER">
